    {
      "name": "5. Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/logout.php",
          "host": ["{{base_url}}"],
          "path": ["auth", "logout.php"]
        },
        "description": "Logout (memerlukan token). Token otomatis diambil dari variable."
      },
      "response": []
    }
  ]
