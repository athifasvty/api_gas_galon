{
  "info": {
    "name": "Gas Galon API - Auth",
    "_postman_id": "auth-gas-galon-001",
    "description": "API Authentication untuk Sistem Gas Elpiji & Air Galon",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/api_gas_galon/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Register Customer",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.success && jsonData.data && jsonData.data.token) {",
              "        pm.collectionVariables.set('token', jsonData.data.token);",
              "        console.log('Token saved:', jsonData.data.token);",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"username\": \"johndoe\",\n  \"password\": \"123456\",\n  \"phone\": \"081234567890\",\n  \"address\": \"Jl. Raya No. 123, Jakarta\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register.php",
          "host": ["{{base_url}}"],
          "path": ["auth", "register.php"]
        },
        "description": "Register customer baru. Token otomatis disimpan setelah berhasil."
      },
      "response": []
    },
    {
